<UserControl x:Class="DishPicker.UserControls.ProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DishPicker.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="65">
    <UserControl.Resources>
        <Image x:Key="Icon" Source="../Resources/edit.png"/>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Image Source="../Resources/edit.png"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <Image Source="../Resources/orange.png" HorizontalAlignment="Center" Width="50"/>
        <Label Content="Апельсин"/>
        <Label Content="500 грамм" Foreground="#7786a6"/>
        <Button Width="12"/>
    </StackPanel>
</UserControl>
